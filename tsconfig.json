{
  "compilerOptions": {
    "rootDir": "src",
    "baseUrl": "./",
    "module": "commonjs",
    "lib": ["es2019", "dom"],
    "jsx": "react",
    "esModuleInterop": true,
    "target": "es2017",
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noImplicitThis": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "paths": {
      "@root/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "jest"
  ]
}
